{
	"manifest_version": 3,
	"name": "Verified Bird",
	"version": "1.0",
	"author": "Rados≈Çaw Gryta",
	"description": "Tell me who paid for useless 'verified' icon?",
	"action": {
		"default_popup": "settings.html",
		"default_icon": "icons/icon32.png"
	},
	 "icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  },
	"permissions": [
		"storage",
		"activeTab",
		"scripting"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"contentScript.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
}