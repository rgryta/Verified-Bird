{
	"manifest_version": 3,
	"name": "Verified Bird",
	"version": "2.1",
	"author": "Rados≈Çaw Gryta",
	"description": "Fix Twitter experience by making everyone verified or by replacing the iconic checkmark.",
	"action": {
		"default_popup": "settings.html",
		"default_icon": "icons/icon32.png"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*.twitter.com/*",
				"https://*.twitter.com/*"
			],
			"js": [
				"contentScript.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
}